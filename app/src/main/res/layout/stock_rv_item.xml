<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="4dp" app:cardBackgroundColor="@color/black_shade2"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/idRLCurrency"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="200dp"
            android:layout_toLeftOf="@id/idTVCurrencyLastPrice"
            android:text="Min: "
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="-31dp"
            android:layout_marginBottom="200dp"
            android:layout_toLeftOf="@id/idTVCurrencyLastPrice"
            android:text="Max: "
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="9dp"
            android:layout_toLeftOf="@id/idTVCurrencyLastPrice"
            android:text="Text"
            android:textColor="@color/white"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/idTvMinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="300dp"
            android:layout_marginRight="342dp"
            android:layout_marginBottom="0dp"
            android:padding="2dp"
            android:text="En Düşük: "
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTvMaxPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="En Yüksek: "
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="190dp"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="130dp"
            android:layout_marginRight="156dp"
            android:padding="3dp"
            android:text="Son: "
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Değişim"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="132dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/idTVCurrencyLastPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="113dp"
            android:layout_marginBottom="1dp"
            android:padding="1dp"
            android:textStyle="bold"
            android:text="LastPrice"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/idTVStockRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVCurrencyLastPrice"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="19dp"
            android:textStyle="bold"
            android:layout_marginBottom="1dp"
            android:padding="2dp"
            android:text="Rate"
            android:textColor="@color/white" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>