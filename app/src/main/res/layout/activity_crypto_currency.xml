<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade1"
    tools:context=".CryptoCurrencyActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idEdtSearchCrypto"
        android:layout_margin="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Kripto Para ara..."/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idEdtSearchCrypto"
        android:id="@+id/RVCrypto"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PbLoadingCrypto"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>